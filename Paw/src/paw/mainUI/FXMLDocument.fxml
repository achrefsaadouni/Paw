<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #DDDDDD;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paw.mainUI.FXMLCnxController">
    <children>
      <AnchorPane prefHeight="50.0" prefWidth="1100.0" styleClass="headerbar" stylesheets="@style.css">
         <children>
            <ImageView fx:id="profile" fitHeight="45.0" fitWidth="45.0" layoutX="98.0" layoutY="2.0" onMouseClicked="#goToProfile" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/icons/user.png" />
               </image>
            </ImageView>
            <Label fx:id="username" layoutX="155.0" layoutY="8.0" text="Label" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <ImageView fx:id="notification" fitHeight="40.0" fitWidth="40.0" layoutX="812.0" layoutY="5.0" onMouseClicked="#goToNotification" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/icons/ic_notifications_white_48dp_1x.png" />
               </image>
            </ImageView>
            <Label fx:id="email" layoutX="155.0" layoutY="24.0" text="Label" textFill="#bfb3b3" />
            <JFXHamburger fx:id="hamburger" layoutX="25.0" layoutY="14.0" />
            <ImageView fx:id="settings" fitHeight="40.0" fitWidth="40.0" layoutX="852.0" layoutY="5.0" onMouseClicked="#goToSettings" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/icons/ic_settings_applications_white_48dp.png" />
               </image>
            </ImageView>
            <ImageView fx:id="chat" fitHeight="40.0" fitWidth="40.0" layoutX="772.0" layoutY="5.0" onMouseClicked="#goToChat" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/icons/ic_chat_white_48dp.png" />
               </image>
            </ImageView>
            <ImageView fx:id="panier" fitHeight="40.0" fitWidth="40.0" layoutX="646.0" layoutY="4.0" onMouseClicked="#showpanier" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/images/ic_shopping_cart_white_48dp.png" />
               </image>
            </ImageView>
            <ImageView fx:id="close" fitHeight="40.0" fitWidth="45.0" layoutX="1046.0" layoutY="4.0" onMouseClicked="#closeWindow" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Ressource/images/close2.png" />
               </image>
            </ImageView>
            <Separator layoutX="928.0" layoutY="3.0" orientation="VERTICAL" prefHeight="45.0" prefWidth="0.0" />
         </children></AnchorPane>
      <AnchorPane fx:id="window" layoutY="50.0" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #ffffff;" />
        
      <JFXDrawer fx:id="drawer" defaultDrawerSize="250.0" layoutY="50.0" onDrawerClosing="#closeDrawer" onDrawerOpening="#openDrawer" prefHeight="650.0" prefWidth="250.0" />
      <AnchorPane fx:id="chart" layoutX="420.0" layoutY="50.0" prefHeight="290.0" prefWidth="500.0" style="-fx-background-color: #337AB7;" visible="false">
         <children>
            <JFXTreeTableView fx:id="paniertree" prefHeight="245.0" prefWidth="500.0">
               <columns>
                  <TreeTableColumn fx:id="imagePanier" prefWidth="200.0" text="Image" />
                  <TreeTableColumn prefWidth="183.0" text="Quantite">
                     <columns>
                        <TreeTableColumn fx:id="PlusPanier" prefWidth="51.0" text="+" />
                        <TreeTableColumn fx:id="quantite" prefWidth="130.0" text="Quantite" />
                        <TreeTableColumn fx:id="MinusPanier" prefWidth="44.0" text="-" />
                     </columns>
                  </TreeTableColumn>
                  <TreeTableColumn fx:id="cancel" prefWidth="73.0" text="Annuler" />
               </columns>
            </JFXTreeTableView>
            <JFXButton fx:id="payerPanier" buttonType="RAISED" layoutX="205.0" layoutY="252.0" onAction="#payer" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #00C0EF;" text="Payer" textFill="WHITE">
               <font>
                  <Font name="Roboto Medium" size="14.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Ressource/images/credit-card.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children></AnchorPane>

   </children>
</AnchorPane>
