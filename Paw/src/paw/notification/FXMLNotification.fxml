<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paw.notification.FXMLNotificationController">
   <children>
      <AnchorPane>
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Accordion>
                     <panes>
                        <TitledPane fx:id="INSERTION" alignment="CENTER" animated="false" text="INSERTION">
                           <content>
                              <AnchorPane>
                                 <children>
                                    <JFXButton layoutX="500.0" layoutY="120.0" onAction="#actionInsertion" style="-fx-background-color: #1976D2;" text="INSERER" />
                                    <JFXTextField fx:id="destinataireInsert" labelFloat="true" layoutX="10.0" layoutY="50.0" prefColumnCount="10" promptText="ID DESTINATAIRE" />
                                    <JFXTextField fx:id="emetteurInsert" labelFloat="true" layoutX="220.0" layoutY="50.0" prefColumnCount="10" promptText="ID EMETTEUR" />
                                    <JFXTextField fx:id="titreInsert" labelFloat="true" layoutX="430.0" layoutY="50.0" prefColumnCount="10" promptText="TITRE" />
                                    <JFXTextField fx:id="texteInsert" labelFloat="true" layoutX="640.0" layoutY="50.0" prefColumnCount="10" promptText="TEXTE" />
                                    <ChoiceBox fx:id="choixInsert" layoutX="830.0" layoutY="50.0" prefWidth="150.0" />
                                 </children>
                              </AnchorPane>
                           </content>
                        </TitledPane>
                        <TitledPane alignment="CENTER" animated="false" text="MODIFICATION">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0">
                                 <children>
                                    <JFXButton layoutX="550.0" layoutY="120.0" onAction="#actionModification" style="-fx-background-color: #1976D2;" text="MODIFIER" />
                                    <JFXTextField fx:id="destinataireModif" labelFloat="true" layoutX="10.0" layoutY="50.0" prefColumnCount="10" promptText="ID DESTINATAIRE" />
                                    <JFXTextField fx:id="emetteurModif" labelFloat="true" layoutX="220.0" layoutY="50.0" prefColumnCount="10" promptText="ID EMETTEUR" />
                                    <JFXTextField fx:id="titreModif" labelFloat="true" layoutX="430.0" layoutY="50.0" prefColumnCount="10" promptText="TITRE" />
                                    <JFXTextField fx:id="texteModif" labelFloat="true" layoutX="640.0" layoutY="50.0" prefColumnCount="10" promptText="TEXTE" />
                                    <ChoiceBox fx:id="choixModif" layoutX="830.0" layoutY="50.0" prefWidth="150.0" />
                                    <JFXTextField fx:id="idModif" labelFloat="true" layoutX="380.0" layoutY="120.0" promptText="ID" />
                                 </children>
                              </AnchorPane>
                           </content>
                        </TitledPane>
                        <TitledPane alignment="CENTER" animated="false" text="SUPRESSION">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0">
                                 <children>
                                    <JFXButton layoutX="572.0" layoutY="75.0" onAction="#actionSupression" style="-fx-background-color: #1976D2;" text="SUPPRIMER" />
                                    <JFXTextField fx:id="idSupression" labelFloat="true" layoutX="352.0" layoutY="75.0" promptText="ID" />
                                 </children>
                              </AnchorPane>
                           </content>
                        </TitledPane>
                     </panes>
                  </Accordion>
                  <TableView fx:id="tableView">
                     <columns>
                        <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="destinataireCol" prefWidth="75.0" text="ID DESTINATAIRE" />
                        <TableColumn fx:id="emetteurCol" prefWidth="75.0" text="ID EMETTEUR" />
                        <TableColumn fx:id="titreCol" prefWidth="75.0" text="TITRE" />
                        <TableColumn fx:id="texteCol" prefWidth="75.0" text="TEXTE" />
                        <TableColumn fx:id="dateCol" prefWidth="75.0" text="DATE" />
                        <TableColumn fx:id="typeCol" prefWidth="75.0" text="TYPE" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
